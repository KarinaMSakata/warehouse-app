<section id="warehouse">
  <h2> <%= Warehouse.model_name.human %> </h2>
  <div>
    <%= link_to 'Cadastrar Galpão', new_warehouse_path %>
  </div>
  <% @warehouses.each do |w| %>
    <div>
      <h3><%= link_to w.name, w %></h3>
      <dl>
        <dt><%= Warehouse.human_attribute_name(:code) %>:</dt>
        <dd><%= w.code %></dd>
        <dt><%= Warehouse.human_attribute_name(:city) %>:</dt>
        <dd><%= w.city %></dd>
        <dt><%= Warehouse.human_attribute_name(:area) %>:</dt>
        <dd><%= w.area %> m2</dd>
      </dl>
      </div>
  <% end %>

  <% if @warehouses.empty? %>
    <p>Não existem galpões cadastrados</p>
  <% end %>
</section>