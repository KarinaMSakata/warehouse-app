<h1>Fornecedores</h1>

<%if @suppliers.any?%>
  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th>Localização</th>
      </tr>
    </thead>
    <body>
      <% @suppliers.each do |s| %>
      <tr>
        <td><%=link_to s.brand_name, s %></td>
        <td><%= s.city %>-<%= s.state %></td>
      </tr>
      <%end%>
    </body>
  </table>
<%else%>
  <%= "Não existem fornecedores cadastrados." %>
<%end%>

<p><%=link_to 'Cadastrar Fornecedor', new_supplier_url%></p>